/*-------------------------------
            Pages
--------------------------------*/

.console-welcome-tour-wrapper {
    color: @consoleWelcomeTourMaskBackground;
}

.console-welcome-tour {
    text-align: @consoleWelcomeTourTextAlign;
    min-width: @consoleWelcomeTourMinWidth !important;
    box-shadow: @consoleWelcomeTourBoxShadow !important;
    padding: @consoleWelcomeTourPadding !important;

    -webkit-transition: none !important;
    transition: none !important;

    &-step{
        &-description {
            font-size: @consoleWelcomeTourStepDescriptionFontSize !important;
            letter-spacing: @consoleWelcomeTourStepDescriptionLetterSpacing;
            min-height: @consoleWelcomeTourStepDescriptionMinHeight;
            line-height: @consoleWelcomeTourStepDescriptionLineHeight;
            user-select: none;
        }
    }

    [data-tour-elem="controls"] {
        justify-content: center;

        [data-tour-elem="navigation"] {
            margin: 0 50px;

            [data-tour-elem="dot"] {

                &.reactour__dot--is-active {
                    background: #3b4258;
                }
            }
        }

        [data-tour-elem="right-arrow"] {
            margin-left: 0;
            outline: none;
        }

        [data-tour-elem="left-arrow"] {
            margin-right: 0;
        }
    }
}

/*---------------------------------------
         Getting Started Page
----------------------------------------*/

.layout.page-layout {
    &.getting-started-page {
        .layout-content {
            padding: 2% 10% !important;
        }

        .greeting {
            margin-bottom: 2.5em;

            .ui.placeholder {
                .line {
                    &:after {
                        background: transparent;
                    }
                }
            }
        }

        .getting-started-card {

            &.embedded-video {
                .ui.embed {
                    height: 100%;
                }
            }

            .card-heading {
                margin-bottom: 1.5em;
            }

            .description-container {
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                border-top: none !important;
                margin-bottom: 15px;
            }

            .action-container {
                padding-top: 0;
                padding-bottom: 0;
                border-top: none !important;

                .quick-start-action {
                    display: flex;
                    flex-direction: row;
                    align-items: center;
                    align-content: center;
                    text-align: left;
                    
                    &:hover {
                        .button-text {
                            text-decoration: underline;
                        }
                    }
                }
            }
            
            .illustration-container {
                display: flex;
                flex-direction: column;
                flex-wrap: nowrap;
                justify-content: center;
                align-items: center;
                align-content: center;

                svg.icon {
                    max-height: 200px;
                }
            }

            &:not(.embedded-video) {
                padding: 1.5em;
            }
            
            &.social-connections-card {
                .description-container {
                    .text-typography {
                        margin-bottom: 0;
                    }
                }
            }
            
            &.learn-card {
                background: @galleryGray;

                .card-heading {
                    margin-bottom: 0;
                }
                .description-container {
                    padding-top: 5px;

                    .text-typography {
                        margin-bottom: 0;
                    }
                }
                .quick-start-action {
                    &:hover {
                        background: transparent !important;
                    }
                }
            }
        }
        
        // Community section
        .community-link-container {
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
            align-items: center;
            align-content: center;
            flex-wrap: nowrap;
            margin-top: 1.5em;

            .contact-icon-container {
                margin-right: 5px;
            }
        }
    }
}

/* Max width 1550px */
@media only screen and (max-width: 1550px) {
    .layout.default-layout .layout-content {
        padding: 1em 2em !important;
    }

    .layout.page-layout {
        &.getting-started-page {
            .layout-content {
                padding: 1% 2% !important;
                
                .greeting {
                    margin-bottom: 2em;

                    .header {
                        font-size: 1.6em;
                    }
                    .subheading {
                        font-size: 1em;
                    }
                }
                .getting-started-card {
                    &:not(.embedded-video) {
                        padding: 1.5em 1em;
                    }
                    
                    &.manage-users-card, &.integrate-card {
                        .description-container {
                            padding-right: 3em;
                        }
                        .illustration-container svg.icon {
                            width: 180px;
                        }
                    }

                    .description-container {
                        margin-bottom: 0;
                        padding-bottom: 10px;
                        padding-top: 0px;
                        
                        .card-heading {
                            margin-bottom: 0.8em;
                            .heading {
                                font-size: 1.4em;
                            }
                        }
                        .text-typography {
                            font-size: 0.9em;
                        }
                    }
                    .ui.labels .label {
                        font-size: .6rem;
                    }
                }
            }
        }
    }
}

/* Max Tablet */
@media only screen and (max-width: @tabletBreakpoint) {
    .layout.default-layout .layout-content {
        padding: 3em 0 !important;
    }

    .layout.page-layout {
        &.getting-started-page {
            .layout-content {
                padding: 0 !important;
            }
        }
    }
}

