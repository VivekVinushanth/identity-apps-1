}

/*---------------------------------------
              Theme Swatch
----------------------------------------*/

.theme-swatch {
	display: inline-block;
	width: @themeSwatchWidth;
	margin-right: 16px;
	vertical-align: top;
	margin-bottom: 16px;
	cursor: pointer;
	border: 1px solid #e8e8e8;
	border-radius: 4px;
	overflow: hidden;

	&.active {
	    border-color: @focusedFormBorderColor;
	}

	.theme-preview {
		padding: 0;
		border-bottom: 1px solid rgba(232,232,232,.13);

		.theme-preview-inner {
			.theme-preview-header-nav {
				background-color: @themeSwatchPreviewHeader;
				border-bottom: 1px solid @themeSwatchPreviewHeaderBorderColor;
				height: 14px;
				position: relative;
				display: flex;
				align-items: center;
				justify-content: flex-end;

				.theme-preview-header-nav-close-button {
					background: #ca4e45;
					width: 6px;
					height: 6px;
					border-radius: 50%;
					margin-right: 6px;
				}
			}
			.theme-preview-content {
				background-color: @themeSwatchPreviewContentBackgroundColor;
				color: rgb(209, 210, 211);
				padding: 15px;

				.theme-preview-content-row {
					height: 20px;
					display: flex;
					align-items: center;
					justify-content: center;
					padding: 0 12px;
				}
				.theme-preview-content-placeholder.logo-placeholder {
					background-color: rgb(209, 210, 211);
					width: 12px;
					height: 12px;
					margin-bottom: 5px;
				}
				.theme-preview-content-row.login-box {
					height: 60px;

					.login-box-placeholder {
						padding: 8px;
						background: @white;
						height: inherit;

						.heading-placeholder {
							margin-bottom: 4px;
							width: 30px;
						}
						.login-box-input {
							width: 100%;
							border: 1px solid rgb(239, 240, 242);
							height: 11px;
							margin: 0px auto;
							display: flex;
							align-items: center;
							border-radius: 3px;
							justify-content: center;
							padding: 0px 3px;

							&:not(:first-child) {
								margin-bottom: 3px;
							}
						}
						.login-box-input.button {
							background: @black;

							.button-text-placeholder {
								opacity: 0.3;
							}
						}
					}
				}
				.theme-preview-content-placeholder {
					width: 60px;
					height: 3px;
					border-radius: 2px;
					background: rgb(239, 240, 242);
				}
			}
		}
	}
	.theme-name-container {
		padding: 16px;
		display: flex;
		font-size: 13px;
		line-height: 1.38463;
		font-weight: 400;
	}
	.theme-swatch-control {
		padding: 6px 10px;
	}
}

