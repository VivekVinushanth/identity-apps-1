/*---------------------------------------
         Branding Preferences
----------------------------------------*/

.branding-page {
    .page-header-wrapper {
        .action-wrapper {
            display: flex !important;
            flex-direction: row;
            flex-wrap: nowrap;
            align-content: center;
            align-items: center;
            justify-content: flex-end;
        }
    }
}

.branding-preference-tab-group {
    height: 62vh;
    
    .resource-tabs {
        height: 100%;
        
        .resource-tab-pane {
            height: inherit;
            display: flex;
            flex-direction: column;
            flex-wrap: nowrap;
            justify-content: space-between;
        }
    }
    .ui.segment {
        &:only-child {
            .resource-tab-pane {
                overflow: auto;
                padding: 0;
            }
        }
        &:not(:only-child) {
            &:first-child {
                .ui.attached.menu {
                    border-top-right-radius: 0;
                    border-right-color: transparent;
                }
                .resource-tab-pane {
                    border-bottom-right-radius: 0;
                    border-right-color: transparent;
                    overflow: auto;
                    padding: 0;

                    .preference-form-container {
                        &:not(.no-max-width) {
                            max-width: 650px;
                        }

                        .inner-tab {
                            > .segment {
                                padding-left: 0;
                                padding-right: 0;
                            }
                        }
                    }
                }
            }
            &:last-child {
                border-top-left-radius: 0;
                
                .ui.attached.menu {
                    border-top-left-radius: 0;
                }
                .resource-tab-pane {
                    border-bottom-left-radius: 0;
                }
                
                &.preview {
                    min-width: 50%;
                    
                    .ui.attached.menu {
                        .item.active {
                            border-bottom-color: transparent;
                            color: unset;
                        }
                    }
                }
            }
        }
        .design-preferences-accordion {
            .ui.segment.emphasized {
                background: rgba(0, 0, 0, 0.03);
            }
        }
        .sticky-action-container {
            margin-left: -2px;
            margin-right: -2px;
            border-left: 0;
            border-right: 0;
            border-bottom: 0;
            position: sticky;
            padding-top: 1.5em;
            padding-bottom: 1.5em;
        }
        .preview-tab {
            padding: 0;
            
            .preview-disclaimer {
                box-shadow: none;
                margin: 0;
                width: 100%;
                position: absolute;
                border-bottom: @defaultBorderWidth solid @infoBorderColor;
            }
            
            .branding-preference-preview-container {
                height: 100%;
                padding-top: 68px;
    
                .ui.iframe {
                    pointer-events: none;
                }
            }
        }
    }
}

.font-family-selector {
    .ui.pointing.menu {
        box-shadow: none;
    }

    > .ui.segment {
        box-shadow: none;
    }
}

@media only screen and (max-width: 991px) {
